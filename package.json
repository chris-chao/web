{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "proxy": {
    "/graphql": {
      "target": "http://localhost:8000"
    }
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.1.4",
    "apollo-client": "^2.0.4",
    "apollo-link-http": "^1.3.2",
    "autoprefixer": "7.1.6",
    "babel-core": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-preset-react-app": "^3.1.0",
    "babel-runtime": "6.26.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "css-loader": "0.28.7",
    "dotenv": "4.0.0",
    "eslint": "4.10.0",
    "eslint-config-react-app": "^2.0.1",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.39.1",
    "eslint-plugin-graphql": "^1.4.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.4.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "fs-extra": "3.0.1",
    "graphql": "^0.12.3",
    "graphql-tag": "^2.6.1",
    "html-webpack-plugin": "2.29.0",
    "object-assign": "4.1.1",
    "postcss-color-function": "^4.0.1",
    "postcss-custom-properties": "^6.2.0",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-import": "^11.0.0",
    "postcss-input-range": "^4.0.0",
    "postcss-loader": "2.0.8",
    "promise": "8.0.1",
    "raf": "3.4.0",
    "react": "^16.2.0",
    "react-apollo": "^2.0.4",
    "react-dev-utils": "^4.2.1",
    "react-display-name": "^0.2.3",
    "react-dom": "^16.2.0",
    "react-measure": "^2.0.2",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-tiny-virtual-list": "^2.1.4",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "schema": "forte-music/schema#bccc6bdd93afaa820666b7b389ecd80a9c9c1e84",
    "style-loader": "0.19.0",
    "stylelint": "^8.4.0",
    "sw-precache-webpack-plugin": "0.11.4",
    "url-loader": "0.6.2",
    "webpack": "3.8.1",
    "webpack-manifest-plugin": "1.3.2",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.3.3",
    "@storybook/addons": "^3.3.0",
    "@storybook/react": "^3.3.3",
    "apollo-codegen": "0xcaff/apollo-codegen#ac135e67ce2335c7ff6eba0bd059d6f9535d2335",
    "apollo-link-schema": "^1.0.2",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "css-modules-flow-types-cli": "^1.1.0",
    "flow-bin": "^0.62.0",
    "flow-coverage-report": "^0.4.0",
    "flow-typed": "^2.2.3",
    "graphql-cli": "^2.9.0",
    "graphql-tools": "^2.16.0",
    "identity-obj-proxy": "^3.0.0",
    "isomorphic-fetch": "^2.2.1",
    "jest": "20.0.4",
    "jest-transform-graphql": "^2.1.0",
    "prettier": "1.9.2",
    "stylelint-config-css-modules": "^1.1.0",
    "stylelint-config-recommended": "^2.0.1",
    "toml": "^2.3.3",
    "webpack-dev-server": "2.9.4"
  },
  "resolutions": {
    "graphql": "^0.12.3"
  },
  "config": {
    "prettierFiles": "'*.js' {src,config}/**/*.{js,css} README.md"
  },
  "scripts": {
    "typings": "flow-typed install",
    "fix-style": "prettier --write $npm_package_config_prettierFiles",
    "check-all": "yarn codegen && yarn lint && yarn flow check && CI=true yarn test",
    "storybook": "start-storybook -p 9001 -c config/storybook",
    "start": "REACT_APP_MOCK_RESOLVER=true node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "lint": "yarn check-style && yarn lint-es && yarn lint-css",
    "lint-es": "eslint 'src/**/*.{js,graphql}'",
    "lint-css": "stylelint 'src/**/*.css'",
    "check-style": "prettier --list-different $npm_package_config_prettierFiles",
    "codegen": "yarn query-codegen && yarn css-modules-codegen",
    "css-modules-codegen": "css-modules-flow-types src/",
    "query-codegen": "apollo-codegen generate 'src/**/*.{graphql,js}' --target flow-modern"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "graphql/template-strings": [
        "warn",
        {
          "env": "literal"
        }
      ],
      "graphql/required-fields": [
        "error",
        {
          "env": "literal",
          "requiredFields": [
            "id"
          ]
        }
      ]
    },
    "plugins": [
      "graphql"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-css-modules"
    ],
    "rules": {
      "no-descending-specificity": null,
      "selector-pseudo-element-no-unknown": [
        true,
        {
          "ignorePseudoElements": [
            "range-track",
            "range-thumb"
          ]
        }
      ],
      "color-named": "never",
      "value-no-vendor-prefix": true,
      "property-no-vendor-prefix": true,
      "declaration-no-important": true,
      "selector-no-vendor-prefix": true,
      "media-feature-name-no-vendor-prefix": true,
      "at-rule-no-vendor-prefix": true,
      "no-unknown-animations": true,
      "color-hex-case": "lower",
      "color-hex-length": "long"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "flow-coverage-report": {
    "includeGlob": [
      "src/**/*.js"
    ],
    "type": "text"
  }
}
